@model Synergy.Models.ViewModels.LoginViewModel

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="auth-card">
            <div class="card-header">
                <h2 class="text-center mb-0">Welcome Back</h2>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-4">
                        <label asp-for="Email" class="control-label">Email Address</label>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-4">
                        <div class="form-check">
                            <input asp-for="RememberMe" class="form-check-input" />
                            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
                        </div>
                    </div>

                    <div class="form-group text-center mb-4">
                        <button type="submit" class="btn btn-primary btn-lg px-5">Login</button>
                    </div>

                    <div class="text-center">
                        <p class="mb-0">Don't have an account? <a asp-action="Register">Register here</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}