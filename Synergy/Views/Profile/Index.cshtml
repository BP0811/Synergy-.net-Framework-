@model Synergy.Models.Profile

<div class="container mt-5">
    <div class="row">
        <h2 class="text-center">Your Profile</h2>
        <div class="col-md-8 offset-md-2">
            <div class="card blurred-card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <dl class="row">
                                <dt class="col-sm-3">Name</dt>
                                <dd class="col-sm-9">@Model.User?.Name</dd>

                                <dt class="col-sm-3">Gender</dt>
                                <dd class="col-sm-9">@Model.Gender</dd>

                                <dt class="col-sm-3">Age</dt>
                                <dd class="col-sm-9">@((DateTime.Now.Year - Model.DateOfBirth.Year))</dd>

                                <dt class="col-sm-3">Location</dt>
                                <dd class="col-sm-9">@Model.Location</dd>

                                <dt class="col-sm-3">Bio</dt>
                                <dd class="col-sm-9">@Model.Bio</dd>
                            </dl>

                            <div class="text-center mt-4">
                                <a asp-action="Edit" class="btn btn-primary">Edit Profile</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
